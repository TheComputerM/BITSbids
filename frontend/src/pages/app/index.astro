---
import { Container, Divider, Flex, HStack } from "styled-system/jsx";
import AppLayout from "~/layouts/AppLayout.astro";
import { Heading } from "~/components/ui/heading";
import { TbBuildingStore, TbGavel, TbPlus } from "solid-icons/tb";
import { button } from "styled-system/recipes";
import Globe from "./_/globe";
import { css } from "styled-system/css";
---

<AppLayout title="App">
  <Container>
    <Flex align="center" wrap="wrap-reverse">
      <div class={css({ py: "4" })}>
        <Heading color="fg.subtle">BITSBids</Heading>
        <Heading textStyle="6xl">Marketplace</Heading>
      </div>
      <Flex justify="center" flexGrow={1}>
        <Globe client:load />
      </Flex>
    </Flex>
  </Container>
  <Divider />
  <br />
  <Container>
    <HStack justify="end">
      <a href="/app/profile/bids" class={button({ variant: "outline" })}>
        <TbGavel />
        Your Bids
      </a>
      <a href="/app/profile/products" class={button({ variant: "outline" })}>
        <TbBuildingStore />
        Your Products
      </a>
      <a href="/app/create-product" class={button()}>
        <TbPlus />
        Create a Product
      </a>
    </HStack>
  </Container>
</AppLayout>
